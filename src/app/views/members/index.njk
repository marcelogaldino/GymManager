{% extends "layout.njk" %}

{% block content %}
    <div class="card index-table">
        <a href="/members/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Acao</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                <tr>
                    <td>
                        <span style="background-image: url({{ member.avatar_url }})"></span>
                        {{ member.name }}
                    </td>
                    <td>{{ member.email }}</td>
                    <td>{{ member.weight }} kg</td>
                    <td>{{ member.height }} cm</td>
                    <td><a href="/members/{{ member.id }}" >Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}



