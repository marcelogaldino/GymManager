<div class="item">
    <div>Avatar</div>
    <div>
        <input 
            type="text"
            name="avatar_url"
            placeholder="http://"
            value="{{ instructor.avatar_url }}"
        >
    </div>
    </div>

    <div class="item">
        <div>Nome</div>
        <div>
            <input 
                type="text"
                name="name"
                value="{{ instructor.name }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Data de nascimento</div>
        <div>
            <input 
                type="date" 
                name="birth"
                value="{{ instructor.birth }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Sexo</div>
        <div>
            <span>
                <input 
                    type="radio" 
                    name="gender" 
                    value="M"
                    checked 
                    {% if instructor.gender == 'M' %}
                        checked
                    {% endif %} 
                >Masculino
            </span>
            <span>
                <input 
                    type="radio" 
                    name="gender" 
                    value="F"
                    {% if instructor.gender == 'F' %}
                        checked
                    {% endif %} 
                >Feminino
            </span>
        </div>
    </div>

    <div class="item">
        <div>Área de atuação</div>
        <div>
            <input 
                type="text"
                name="services"
                placeholder="Separe os servicos prestados por virgula"
                value="{{ instructor.services }}"
            >
        </div>
    </div>
    
    <button type="submit">Salvar</button>